
darkCyan = hsl(185, 75%, 39%)
veryDarkDesaturatedBlue = hsl(229, 23%, 23%)
darkGrayishBlue = hsl(227, 10%, 46%)
darkGray = hsl(0, 0%, 59%)

:root{
    font-size 18px
}

* {
    padding 0
    margin 0
    box-sizing border-box
}

body {
    font-family: 'Kumbh Sans', sans-serif;
    color hsl(0, 11%, 12%)

}
section {
    display flex
    align-items center
    justify-content center
    background-color  darkCyan
    overflow hidden
    height 100vh
    position relative
}

.card {
    position: relative
    width 400px
    border-radius 20px
    background-color #fff
    overflow hidden
    text-align center
}

.card-header {
    background-image url("../images/bg-pattern-card.svg")
    background-size cover
    height 150px  
    background-position:center
    
}

.img-holder {
    width 100px
    height 100px
    border-radius: 50%
    border 5px solid #fff
    overflow hidden
    margin -50px auto 30px auto
}

.card-body {
   padding 0 20px 30px

}

.name-age {
    font-size 1.5rem
    margin-bottom 20px

}

.age, .city, .meta{
    font-weight 50
    opacity 90%
    color veryDarkDesaturatedBlue

}

.card-footer {
    border-top 1px solid grey
    display flex 
    justify-content space-between
    align-items center
    padding 40px
}

.age {
    padding 5px
}
  
.value {
    font-size 1.2rem
}

.meta, .city {
    padding 10px
    font-size 0.975rem
}

a {
    color inherit
    text-decoration none
}

.circles .c1
.circles .c2 {
    position absolute
    animation 2s circles forwards 
    opacity 0
    width 800px
}

.circles .c1 {
 top -180px
 left -1px
 transform translate(-100px, -50px)
}

.circles .c2 {
    bottom -180px
    right -1px
    transform translate(100px, 50px)
}

@keyframes circles {
    0% { 
        opacity: 0;
    }

    100% {
        opacity: 1;
        transform: translate(0);
    }
}

.attribution {
    background-color  darkCyan
    text-align: center;
    font-size: 12px;
    
}

.attribution a{
    color: #3e4870;
}